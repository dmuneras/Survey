<% form_for @question do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :aspect_id %><br />
    <%= f.text_field :aspect_id %>
  </p>
 
  <div class = "answers">
  <% f.fields_for :answers do |builder| %>
     <%= render 'answers/answer_form', :f => builder %>
  <% end %>
  </div> 
  <p><%= f.submit %></p>
  
<% end %>
