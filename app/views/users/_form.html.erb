
<% form_for [@company,@user]  do |f| %>

  <%= f.error_messages %>
  <p>
    <%= f.label :username, "Login" %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :name, "Nombre" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :last_name, "Apellido" %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email, "Correo electronico" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Ingrese de nuevo su contraseña" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Crear usuario" %></p>
<% end %>
